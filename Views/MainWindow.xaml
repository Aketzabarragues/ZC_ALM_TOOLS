<Window x:Class="ZC_ALM_TOOLS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ZC_ALM_TOOLS.Views"
        mc:Ignorable="d"
        Title="ZC Tools - TIA Portal Add-In" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#F0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10" Background="#F5F6F7" BorderBrush="#E1E1E1" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="📂 Cargar Excel Definicion programacion" 
                    Command="{Binding CargarDatosCommand}" 
                    Width="250" Height="30" Margin="0,0,10,0"/>

                    <TextBlock Text="{Binding ArchivoExcelSeleccionado, TargetNullValue='Ningún archivo seleccionado'}" 
                       VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic"/>
                </StackPanel>

                <Button Command="{Binding ConfigurarRutaExeCommand}"
                HorizontalAlignment="Right"
                Width="30" Height="30"
                ToolTip="Configurar ruta del Extractor"
                Background="Transparent"
                BorderThickness="0"
                FontSize="16"
                Content="⚙️">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#555555"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Background" Value="#E5E5E5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <TabControl Grid.Row="1" Margin="5">

            <TabItem Header="🔧 Dispositivos">
                <views:ViewDispositivos DataContext="{Binding DispositivosViewModel}"/>
            </TabItem>

            <TabItem Header="🏭 Procesos">
                <Grid Background="#FAFAFA">
                    <TextBlock Text="Módulo de Procesos (Pendiente)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="🚨 Alarmas">
                <Grid Background="#FAFAFA">
                    <TextBlock Text="Módulo de Alarmas (Pendiente)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding MensajeEstado}" 
                   Foreground="{Binding ColorEstado}" 
                   FontWeight="SemiBold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>