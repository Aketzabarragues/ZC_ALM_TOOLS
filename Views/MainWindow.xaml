<Window x:Class="ZC_ALM_TOOLS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ZC_ALM_TOOLS.Views"
        Title="TIA Portal - Generador de procesos" Height="700" Width="1000" Background="#F0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10" Background="#F5F6F7" BorderBrush="#E1E1E1" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="📂 Cargar Excel Master" Width="150" Height="30" Margin="0,0,10,0"/>
                <TextBlock Text="C:\Usuarios\...\Definicion_programacion.xlsm" VerticalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" Margin="5">

            <TabItem Header="🔧 Dispositivos">
                <views:ViewDispositivos/>
            </TabItem>

            <TabItem Header="🏭 Procesos">
                <Grid Background="#FAFAFA">
                    <TextBlock Text="Módulo de Procesos (Pendiente)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="🚨 Alarmas">
                <Grid Background="#FAFAFA">
                    <TextBlock Text="Módulo de Alarmas (Pendiente)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="Listo para sincronizar."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>