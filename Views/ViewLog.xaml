<UserControl x:Class="ZC_ALM_TOOLS.Views.ViewLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:ZC_ALM_TOOLS.Core">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Limpiar Consola" 
                Command="{Binding ClearLogCommand}"
                HorizontalAlignment="Right" 
                Margin="5" Padding="10,2"/>

        <ListBox Grid.Row="1" 
                 ItemsSource="{Binding LogMessages}"
                 Background="Transparent" 
                 BorderThickness="0"
                 Foreground="#859900" 
                 FontFamily="Consolas" 
                 FontSize="12"
                 core:ListBoxBehavior.ScrollOnNewItem="True">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,1"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>